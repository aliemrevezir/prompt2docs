{
    "manifest_version": 2,
    "name": "Prompt2Docs",
    "version": "1.0",
    "description": "Export your prompts and responses into a PDF effortlessly.",
    "permissions": [
        "activeTab",
        "downloads",
        "storage",
        "tabs",
        "<all_urls>"
    ],
    "browser_action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "assets/icon16.png",
            "48": "assets/icon48.png",
            "128": "assets/icon128.png"
        }
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at": "document_end"
        }
    ],
    "icons": {
        "16": "assets/icon16.png",
        "48": "assets/icon48.png",
        "128": "assets/icon128.png"
    }
}
  